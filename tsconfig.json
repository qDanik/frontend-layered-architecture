{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "listFiles": false,
    "allowJs": false,
    "sourceMap": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "jsx": "react",
    "lib": ["es6", "es7", "dom", "esnext"],
    "paths": {
      "*": ["src/*"],
      "assets/*": ["assets/*"]
    },
    "types": ["reflect-metadata", "@types/jest", "vite/client"],
    "typeRoots": ["node_modules/@types", "./src/typings"]
  },
  "include": ["./assets", "./src"],
  "exclude": ["node_modules", "dist", "coverage", "configs"]
}
