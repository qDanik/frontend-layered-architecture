{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./ts-dist",
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "listFiles": false,
    "allowJs": true,
    "sourceMap": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "jsx": "react",
    "lib": [
      "es6",
      "es7",
      "dom",
      "esnext"
    ],
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "types": [
      "reflect-metadata",
      "jest",
      "vite/client"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./setup",
    "./src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "docker",
    "docs",
    ".*"
  ]
}