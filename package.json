{
  "name": "react-project-template",
  "author": {
    "name": "qDanik",
    "email": "qdanik@yandex.ru",
    "url": "https://vk.com/qdanik"
  },
  "version": "2.2.0",
  "main": "src/presentation/web/index.tsx",
  "scripts": {
    "vite": "vite --config ./configs/vite/config.ts",
    "start": "yarn vite --host",
    "preview": "yarn vite preview --port 3030",
    "build": "yarn vite build",
    "lint": "yarn eslint && yarn tslint",
    "eslint": "eslint \"./src/**/*.ts\" \"./src/**/*.tsx\" --max-warnings 0",
    "eslint:perf": "set TIMING=1 & yarn eslint",
    "tslint": "yarn tsc --pretty --noEmit",
    "jest": "jest --config ./configs/jest/config.ts",
    "test": "yarn jest --verbose --runInBand",
    "test:ci": "yarn test --no-cache --coverage",
    "postinstall": "husky install ./configs/husky",
    "pre-commit": "yarn lint",
    "pre-push": "yarn build && yarn test --coverage"
  },
  "dependencies": {
    "axios": "0.26.0",
    "date-fns": "2.28.0",
    "i18next": "21.6.13",
    "i18next-browser-languagedetector": "6.1.3",
    "i18next-resources-to-backend": "1.0.0",
    "inversify": "6.0.1",
    "lodash": "4.17.21",
    "mobx": "6.4.2",
    "mobx-react": "7.3.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-helmet": "^6.1.0",
    "react-hook-form": "7.27.1",
    "react-router": "6.2.2",
    "react-router-dom": "6.2.2",
    "reflect-metadata": "0.1.13",
    "styled-components": "5.3.3",
    "yup": "0.32.11"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "7.17.2",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-typescript": "7.16.7",
    "@babel/register": "7.17.0",
    "@svgr/core": "^6.2.1",
    "@svgr/plugin-jsx": "^6.2.1",
    "@svgr/plugin-svgo": "^6.2.0",
    "@testing-library/react": "12.1.3",
    "@types/jest": "27.4.1",
    "@typescript-eslint/eslint-plugin": "5.13.0",
    "@typescript-eslint/parser": "5.13.0",
    "@vitejs/plugin-react": "1.2.0",
    "@vitejs/plugin-react-refresh": "1.3.6",
    "eslint": "8.10.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.29.3",
    "eslint-plugin-react-hooks": "4.3.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "less": "4.1.2",
    "prettier": "2.5.1",
    "ts-jest": "27.1.3",
    "ts-node": "10.6.0",
    "typescript": "4.5.5",
    "vite": "2.8.6",
    "vite-plugin-cdn-import": "0.3.5",
    "vite-plugin-compression": "0.5.1",
    "vite-tsconfig-paths": "3.4.1"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "endOfLine": "lf"
  },
  "babel": {
    "extends": "./configs/.babelrc"
  },
  "eslintConfig": {
    "extends": [
      "./configs/.eslintrc"
    ]
  }
}
