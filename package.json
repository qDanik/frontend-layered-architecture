{
  "name": "react-monorepo-clean-architecture",
  "author": {
    "name": "qDanik",
    "email": "qdanik@yandex.ru",
    "url": "https://vk.com/qdanik"
  },
  "engines": {
    "node": ">= 16"
  },
  "workspaces": [
    "projects/*",
    "packages/*"
  ],
  "version": "3.4.0",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "lerna run start --stream",
    "build": "lerna run build",
    "lint-staged": "lerna run lint-staged",
    "lint": "lerna run lint",
    "eslint:fix": "lerna run eslint:fix",
    "commitlint": "commitlint -e",
    "docker:up": "docker-compose -f ./docker/docker-compose.yml up -d --build",
    "docker:stop": "docker-compose -f ./docker/docker-compose.yml stop",
    "docker:down": "docker-compose -f ./docker/docker-compose.yml down",
    "pre-commit": "npm run lint-staged",
    "pre-push": "npm run build",
    "prepare": "npm run bootstrap",
    "postinstall": "husky install ./packages/config/husky && chmod ug+x ./packages/config/husky/*"
  },
  "dependencies": {
