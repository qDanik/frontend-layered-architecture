{
  "name": "react-project-template",
  "author": {
    "name": "qDanik",
    "email": "qdanik@yandex.ru",
    "url": "https://vk.com/qdanik"
  },
  "version": "1.0.0",
  "main": "src/presentation/web/index.tsx",
  "scripts": {
    "vite": "vite --config ./configs/vite/config.ts",
    "start": "yarn vite --host",
    "preview": "yarn vite preview --port 3030",
    "build": "yarn vite build",
    "lint": "yarn eslint && yarn tslint",
    "eslint": "eslint \"./src/**/*.ts\" \"./src/**/*.tsx\" --max-warnings 0",
    "tslint": "yarn tsc --pretty --noEmit",
    "jest": "jest --config ./configs/jest/config.ts",
    "test": "yarn jest --verbose --runInBand",
    "test:ci": "yarn test --no-cache --coverage",
    "postinstall": "husky install",
    "pre-commit": "yarn lint",
    "pre-push": "yarn build && yarn test --coverage"
  },
  "dependencies": {
    "@types/lodash": "4.14.173",
    "@types/react": "17.0.24",
    "@types/react-dom": "17.0.9",
    "@types/react-router": "5.1.16",
    "@types/react-router-dom": "5.3.0",
    "@types/styled-components": "5.1.14",
    "axios": "0.21.4",
    "date-fns": "2.24.0",
    "inversify": "5.1.1",
    "lodash": "4.17.21",
    "mobx": "6.3.3",
    "mobx-react": "7.2.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "7.16.0",
    "react-router": "5.2.1",
    "react-router-dom": "5.3.0",
    "reflect-metadata": "0.1.13",
    "styled-components": "5.3.1",
    "yup": "0.32.9"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "7.15.4",
    "@babel/preset-env": "7.15.6",
    "@babel/preset-typescript": "7.15.0",
    "@babel/register": "7.15.3",
    "@testing-library/react": "12.1.0",
    "@types/jest": "27.0.2",
    "@typescript-eslint/eslint-plugin": "4.31.2",
    "@typescript-eslint/parser": "4.31.2",
    "@vitejs/plugin-react-refresh": "1.3.6",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.26.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "husky": "7.0.2",
    "jest": "27.2.1",
    "less": "4.1.1",
    "prettier": "2.4.1",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.1",
    "typescript": "4.4.3",
    "vite": "2.5.10",
    "vite-plugin-cdn-import": "0.3.5",
    "vite-plugin-compress": "2.1.0",
    "vite-plugin-compression": "0.3.5",
    "vite-plugin-react-svg": "0.2.0",
    "vite-tsconfig-paths": "3.3.14"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "endOfLine": "lf"
  },
  "babel": {
    "extends": "./configs/.babelrc"
  },
  "eslintConfig": {
    "extends": ["./configs/.eslintrc"]
  }
}
